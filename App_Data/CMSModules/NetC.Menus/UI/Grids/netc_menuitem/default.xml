<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="#move" caption="$General.DragMove$" fonticonclass="icon-dots-vertical" />
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$General.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="MenuItemDisplayName" caption="$NetC_MenuItem.DisplayName$" wrap="false">
      <filter type="text" size="200" />
    </column>
    <column source="MenuItemURL" caption="$NetC_MenuItem.URL$" wrap="false">
      <filter type="text" size="200" />
    </column>
    <column source="MenuItemTarget" caption="$NetC_MenuItem.Target$" wrap="false" />
    <column cssclass="filling-column" />
  </columns>
  <options>
    <key name="AllowSorting" value="false" />
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
